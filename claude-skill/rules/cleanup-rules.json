{
  "naming": {
    "case_style": "title_case",
    "remove_underscores": true,
    "remove_c_prefix": true,
    "preserve_acronyms": ["ID", "YTD", "MTD", "QTD", "KPI", "ROI", "YOY", "MOM", "WOW", "LOD", "RLS", "API", "URL", "SQL", "AVG", "SUM", "MIN", "MAX"]
  },
  "folders": {
    "Core Metrics": {
      "keywords": ["sum", "avg", "count", "total", "margin", "rate", "percent", "revenue", "profit", "sales", "cost", "amount", "value", "metric", "kpi"],
      "description": "Primary KPIs and main measures"
    },
    "Time Series": {
      "keywords": ["yoy", "mom", "wow", "trend", "rolling", "running", "previous", "change", "growth", "comparison", "prior", "last", "delta"],
      "description": "Year-over-year, month-over-month, trends, rolling averages"
    },
    "Filters and Flags": {
      "keywords": ["filter", "flag", "is_", "has_", "include", "exclude", "active", "valid", "selected", "boolean", "true", "false", "condition"],
      "description": "Boolean filters and flag indicators"
    },
    "Date Calculations": {
      "keywords": ["date", "year", "month", "week", "day", "quarter", "fiscal", "period", "calendar", "anchor", "reference", "current", "today"],
      "description": "Date logic, date filters, period calculations"
    },
    "Rankings": {
      "keywords": ["rank", "top", "bottom", "index", "percentile", "nth", "position", "order"],
      "description": "Top N filters, RANK() calculations, ordering"
    },
    "UI and Tooltips": {
      "keywords": ["label", "tooltip", "display", "format", "text", "color", "size", "shape", "button", "title", "header", "footer"],
      "description": "Display formatting, tooltip text, UI elements"
    },
    "LOD Expressions": {
      "formula_patterns": ["{ FIXED", "{ INCLUDE", "{ EXCLUDE", "{FIXED", "{INCLUDE", "{EXCLUDE"],
      "description": "Level of Detail expressions"
    },
    "Projections": {
      "keywords": ["forecast", "projection", "predict", "estimate", "future", "expected", "target", "goal", "budget"],
      "description": "Forecasts and future-looking calculations"
    },
    "Security": {
      "keywords": ["rls", "security", "user", "permission", "access", "row level", "username", "email"],
      "description": "Row-level security, user-based calculations"
    }
  },
  "xml_escaping": {
    "&": "&amp;",
    "'": "&apos;",
    "\"": "&quot;",
    "<": "&lt;",
    ">": "&gt;"
  },
  "comment_format": {
    "prefix": "// ",
    "newline_encoding": "&#13;&#10;",
    "guidelines": [
      "Explain PURPOSE, not just what the formula does",
      "Document parameter dependencies",
      "Note special cases or edge conditions",
      "Keep comments concise (1-2 sentences)",
      "Use business terminology when appropriate"
    ],
    "bad_examples": [
      "// Returns 1 or 2",
      "// Case statement",
      "// Date calculation",
      "// Sum of sales"
    ],
    "good_examples": [
      "// Red for decline, black for flat/growth",
      "// Routes to metric source based on parameter",
      "// Reference date for YoY comparisons (most recent data date)",
      "// Filters to top 5 ranked skills when parameter selected"
    ]
  },
  "safety": {
    "backup_before_edit": true,
    "preserve_name_attribute": true,
    "log_all_changes": true,
    "output_mode": "create_cleaned_copy",
    "output_suffix": "_cleaned",
    "validate_xml_before_save": true
  },
  "file_handling": {
    "supported_extensions": [".twb", ".twbx"],
    "exclude_patterns": ["_backup", "_cleaned", "Archive", "backups", "old", "deprecated"],
    "backup_folder": "backups",
    "temp_folder_prefix": "tableau_cleanup_"
  }
}
